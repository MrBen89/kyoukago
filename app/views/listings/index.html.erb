<div class="row g-4">
  <% if @listings.present? %>
    <% @listings.each do |book| %>
      <div class="col-6 col-sm-4 col-md-3">
        <div class="card h-100 shadow-sm border-light">
          <div class="card-body text-center">
            <div class="bg-light rounded mb-3" style="height: 150px;">
              <% if book.image.attached? %>
        <img class="pb-3" src="<%= url_for(book.image) %>" alt="Listing image" style="width: 100%">
        <% end %>
            </div>
            <h5 class="h6 text-dark fw-bold"><%= book.title %></h5>
            <p class="text-muted mb-2"><%= book.price %>円 a night</p>
            <%= link_to "More Details", listing_path(book), class: "btn btn-sm btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No books available at the moment.</p>
  <% end %>
</div>

<div class=“button-container-red d-flex justify-content-end mt-4”>
  <a href=“#” class=“btn btn-primary btn-lg rounded-pill”>List a Book</a>
</div>
