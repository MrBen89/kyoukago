<div class="row g-4">
  <% if @listings.present? %>
    <% @listings.each do |book| %>
      <div class="col-6 col-sm-4 col-md-3 p-3">
        <div class="card shadow-sm border-light">
          <div class="card-body text-center">
            <div class="bg-light rounded mb-3" style="height: 400px;">
              <div style="250px">
                <% if book.image.attached? %>
                  <img class="pb-3" src="<%= url_for(book.image) %>" alt="Listing image" style="width: 230px">
                  <%= cl_image_tag book.image.key, height: 300, width: 400, crop: :fill %>
                <% end %>
              </div>
            </div>
            <h5 class="h6 text-dark fw-bold"><%= book.title %></h5>
            <p class="text-muted mb-2"><%= book.price %>円 a night</p>
            <%= link_to "More Details", listing_path(book), class: "btn btn-sm btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No books available at the moment.</p>
  <% end %>
</div>

<div class=“button-container-red d-flex justify-content-end mt-4”>
  <a href=“#” class=“btn btn-primary btn-lg rounded-pill”>List a Book</a>
</div>
