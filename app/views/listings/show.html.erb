<div class="container">
  <div class="row">

    <div class="col-lg-8 mb-4">
      <% if @listing.image.attached? %>
        <img class="pb-3 rounded" src="<%= url_for(@listing.image) %>" alt="Listing image" style="width: 80%; max-width: 300px; height: auto;">
      <% else %>
        <img class="pb-3" src="https://randomuser.me/api/portraits/men/1.jpg" alt="No image available" style="width: 80%; max-width: 300px; height: auto;">
      <% end %>
      <h1><%= @listing.title %> - <%= @listing.price %>å††</h1>
    </div>
    <div class="col-lg-4 p-3 my-3 bg-white rounded shadow d-flex flex-column justify-content-between">
      <div>
        <h3 class="font-weight-bold text-dark"><%= @listing.book.title %> by <%= @listing.book.author %></h3>
        <p><%= @listing.condition %> - Last updated: <%= @updated == 1 ? "Today" : "#{@updated} days ago" %></p>
        <p class="text-muted"><%= @listing.comment %></p>
        <a href="#" class="btn btn-outline-primary">See <%= @listing.book.title %> by <%= @listing.book.author %> in our Library database!</a>
      </div>
      <div style="width: 100%">
        <!-- Button to trigger modal -->
        <button type="button" class="btn btn-primary mt-3 w-100" data-bs-toggle="modal" data-bs-target="#bookingModal">
          Borrow this book!
        </button>
      </div>
    </div>
  </div>
  <div class="row m-3 p-3 bg-white rounded shadow d-flex justify-content-between">
    <% if @listing.user.profile_image.attached? %>
      <img class="pb-3 rounded-circle" src="<%= url_for(@listing.user.profile_image) %>" alt="User profile image" style="width: 100px;">
    <% else %>
      <img class="pb-3 rounded-circle" src="https://randomuser.me/api/portraits/men/1.jpg" alt="User profile" style="width: 100px;"> <!-- Random man image -->
    <% end %>
    <div class="col-lg-11">
      <p class="font-weight-bold"><%= @listing.user.email %></p>
      <p>
        <span class="star-box">
          <i class="fa-solid fa-star"></i>
          <i class="fa-solid fa-star"></i>
          <i class="fa-solid fa-star"></i>
          <i class="fa-regular fa-star"></i>
          <i class="fa-regular fa-star"></i>
        </span>
        42 reviews
      </p>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="bookingModal" tabindex="-1" aria-labelledby="bookingModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="bookingModalLabel">Borrow this Book!</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render partial: 'bookings_form' %>
      </div>
    </div>
  </div>
</div>
