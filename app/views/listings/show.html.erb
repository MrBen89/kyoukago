<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <img class="pb-3" alt="image" style="width: 100%">
      <h1><%= @listing.title %> - <%= @listing.price %>å††</h1>
    </div>
    <div class="col-lg-4 p-3 my-3 bg-white rounded shadow d-flex flex-column justify-content-between">
      <div>
        <h3><%= @listing.book.title %> by <%= @listing.book.author %></h3>
        <p><%= @listing.condition %> - Last updated: <%= @updated == 1 ? "Today" : "#{@updated} days ago" %></p>
        <p><%= @listing.comment %></p>
        <a href="#">See <%= @listing.book.title %> by <%= @listing.book.author %> in our Library database!</a>
      </div>
      <div style="width: 100%">
        <!-- Button to trigger modal -->
        <button type="button" class="btn btn-primary mt-3 w-100" data-bs-toggle="modal" data-bs-target="#bookingModal">
          Borrow this book!
        </button>
      </div>
    </div>
  </div>
  <div class="row m-3 p-3 bg-white rounded shadow d-flex justify-content-between">
    <img class="pb-3" alt="image" style="width: 100px">
    <div class="col-lg-11">
      <%= @listing.user.email %>
      <p>
        <span class="star-box">
          <i class="fa-solid fa-star"></i>
          <i class="fa-solid fa-star"></i>
          <i class="fa-solid fa-star"></i>
          <i class="fa-regular fa-star"></i>
          <i class="fa-regular fa-star"></i>
        </span>
        42 reviews
      </p>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="bookingModal" tabindex="-1" aria-labelledby="bookingModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="bookingModalLabel">Borrow this Book!</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render partial: 'bookings_form' %>
      </div>
    </div>
  </div>
</div>
